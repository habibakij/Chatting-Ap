<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/lovebackground"
    android:weightSum="6"
    android:orientation="vertical">

    <include layout="@layout/custom_app_ber"
        android:id="@+id/toolbar_register"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1.5"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:tint="@color/colorWhite"
            android:src="@drawable/lovelogo"/>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="4.5"
        android:elevation="20sp"
        app:cardCornerRadius="15sp"
        android:layout_margin="30sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="30sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="40sp"
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_person"/>

                <EditText
                    android:id="@+id/enter_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:singleLine="true"
                    app:met_floatingLabel="normal"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:hint="@string/name"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_gravity="center"
                android:layout_marginStart="35dp"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="40sp"
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_email_black"/>

                <EditText
                    android:id="@+id/enter_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:singleLine="true"
                    app:met_floatingLabel="normal"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:hint="@string/contact_email"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:layout_marginStart="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="40sp"
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_lock"/>

                <EditText
                    android:id="@+id/enter_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    app:met_floatingLabel="normal"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:hint="@string/reg_password"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="10sp"
                android:layout_gravity="center"
                android:layout_marginStart="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25sp"
                    android:layout_height="40sp"
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_lock"/>

                <EditText
                    android:id="@+id/enter_re_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15sp"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    app:met_floatingLabel="normal"
                    android:maxLines="1"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:hint="@string/reg_re_password"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/set_register"
                        android:layout_width="200sp"
                        android:layout_height="45sp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/round2"
                        android:text="@string/noaccount_reg"
                        android:textAllCaps="false"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/already_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/already_account"
                        android:textColor="@color/colorAccent"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>