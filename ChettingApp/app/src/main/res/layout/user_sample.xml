<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10sp"
    app:cardElevation="10sp">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/all_user_profile_image"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/all_user_display_name"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginStart="20sp"
            android:layout_toEndOf="@id/all_user_profile_image"
            android:gravity="bottom"
            android:text="@string/d_name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/all_user_status"
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:layout_below="@id/all_user_display_name"
            android:layout_marginStart="20sp"
            android:layout_toEndOf="@id/all_user_profile_image"
            android:text="@string/d_status"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>